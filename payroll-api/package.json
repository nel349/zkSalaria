{
  "name": "@zksalaria/payroll-api",
  "version": "0.1.0",
  "description": "zkSalaria - API Layer for Privacy-Preserving Payroll System",
  "author": "Midnight Developer",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "typecheck": "tsc --noEmit",
    "build": "mkdir -p dist && tsc",
    "build:vercel": "mkdir -p dist && tsc",
    "dev": "mkdir -p dist && tsc --watch",
    "test": "RUN_STANDALONE=true vitest run --passWithNoTests",
    "test:smoke": "vitest run src/test/payroll-api.smoke.test.ts",
    "test:integration": "RUN_STANDALONE=true vitest run src/test/payroll-api.test.ts",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@zksalaria/payroll-contract": "file:../payroll-contract",
    "@midnight-ntwrk/compact-runtime": "^0.9.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "testcontainers": "^10.9.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0",
    "rxjs": "^7.8.2",
    "pino": "^8.16.0"
  },
  "files": [
    "dist/"
  ]
}
