{
  "name": "@zkSalaria/workspace",
  "version": "0.1.0",
  "description": "Midnight ZkSalaria - Private Payroll System Workspace",
  "author": "Midnight Developer",
  "license": "MIT",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "payroll-contract",
    "pay-api",
    "pay-ui",
    "pay-commons"
  ],
  "scripts": {
    "compact": "turbo run compact",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "dev": "turbo run dev",
    "dev:local": "turbo run dev:local --filter=@midnight-pay/pay-ui",
    "dev:testnet": "turbo run dev:testnet --filter=@midnight-pay/pay-ui",
    "pay-ui": "npm run build && turbo run start --filter=@midnight-pay/pay-ui",
    "pay-ui:local": "npm run config:local && npm run build && turbo run start --filter=@midnight-pay/pay-ui",
    "pay-ui:testnet": "npm run config:testnet && npm run build && turbo run start --filter=@midnight-pay/pay-ui",
    "config:testnet": "cp pay-ui/public/config.testnet.json pay-ui/public/config.json",
    "config:local": "cp pay-ui/public/config.local.json pay-ui/public/config.json",
    "build:ui:testnet": "turbo run build --filter=@midnight-pay/pay-api && cd pay-ui && npm run build:testnet",
    "recompile": "turbo run build --filter=@midnight-pay/pay-contract",
    "update-keys": "cd payroll-contract && npm run update-api-resources",
    "copy-keys-to-ui": "cd pay-api && npm run copy-keys-to-ui",
    "clean": "turbo run clean"
  },
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "^0.8.1",
    "@midnight-ntwrk/dapp-connector-api": "^3.0.0", 
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/midnight-js-contracts": "^2.0.2",
    "@midnight-ntwrk/midnight-js-fetch-zk-config-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-network-id": "^2.0.2",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-types": "^2.0.2",
    "@midnight-ntwrk/midnight-js-utils": "^2.0.2",
    "@midnight-ntwrk/wallet": "^5.0.0",
    "@midnight-ntwrk/wallet-api": "^5.0.0",
    "fp-ts": "^2.16.1",
    "io-ts": "^2.2.20",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.3",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "vitest": "^3.2.1"
  }
}